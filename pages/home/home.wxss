.tapType {
    width: 100%;
    padding: 40rpx 0rpx;
    background-color: #fff;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
}

scroll-view {
    white-space: nowrap;
}

.tapType .type {
    font-size: 32rpx;
    line-height: 60rpx;
    text-align: center;
    width: 120rpx;
    height: 60rpx;
    display: inline-block;
    margin-left: 30rpx;
    color: #8bc7d4;
    border-radius: 12rpx;
    border: 2rpx #cde4e8 solid;
}

.tapType .type:last-child {
    margin-right: 30rpx;
}

.shop {
    margin-left: 20px;
    float: left;
    font-size: 32rpx;
    line-height: 48rpx;
    color: #333333;
    background-color: #fff;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}

.shop>view{
    padding: 0rpx 30rpx;
}
.shop>view:nth-of-type(2) {
    font-size: 26rpx;
    letter-spacing: 0px;
    line-height: 30px;
    color: #58a4b4;
}