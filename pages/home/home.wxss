.home {
    overflow: hidden;
}

.giftView {
    background-color: #fff;
    width: 100%;
    overflow: hidden;
}

.giftView .address {
    width: 140rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx 0rpx 0rpx 30rpx;
    border-radius: 10rpx;
    border: 2rpx #57a3b3 solid;

}

.giftView .address text {
    color: #57a3b3;
}

.giftView>view:nth-of-type(2) {
    margin-top: 57rpx;
    margin-bottom: 16rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    letter-spacing: 4rpx;
    line-height: 48rpx;
    color: #58a4b4;
}

.giftView>view:nth-of-type(3) {
    height: 300rpx;
    display: flex;
    justify-content: center;
}

.giftView>view:nth-of-type(3) view {
    writing-mode: vertical-rl;
    word-break: break-all;
    float: left;
    font-size: 28rpx;
    letter-spacing: 2rpx;
    line-height: 48rpx;
    margin: 0rpx 10rpx;
}

.giftView>view:nth-of-type(3)>view:nth-of-type(1) view {
    border: 2rpx #cde4e8 solid;
    color: #a2ccd5;
    font-size: 24rpx;
    padding: 10rpx 5rpx ;
}

.giftView>view:nth-of-type(3)>view:nth-of-type(2) {
    border-left: 2rpx #cde4e8 solid;
    border-right: 2rpx #cde4e8 solid;
    color: #6d90a3;
    font-size: 24rpx;
}

.giftView>view:nth-of-type(3)>view:nth-of-type(3) {
    color: #58a4b4;
    font-size: 30rpx;
}

.giftView>view:nth-of-type(4) {
    display: flex;
    justify-content: center;
}

