page {
    background-color: #fff;
}

.commondityCoupons {
    overflow: hidden;
}

swiper,
swiper-item {
    width: 100vw;
    height: 500rpx;
}

swiper+view {
    height: 125rpx;
    font-size: 30rpx;
    line-height: 30rpx;
    color: #333333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0rpx 30rpx;
}

.submit {
    width: 100%;
    background-color: #58a4b4;
    font-size: 36rpx;
    line-height: 36rpx;
    color: #ffffff;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    bottom: 0;
}


.couponsCard {
    margin: 40rpx;
    /* width: 100%; */
    height: 220rpx;
    position: relative;
}

.information {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.information view {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.information>view:nth-of-type(1) {
    /* margin-left: 60rpx; */
    width: 200rpx;
    color: #58a4b4;
    font-size: 80rpx;
    letter-spacing: -12rpx;
    color: #58a4b4;
}

.information>view:nth-of-type(2) {
    flex-direction: column;
    font-size: 48rpx;
    letter-spacing: 0rpx;
    line-height: 50rpx;
    color: #58a4b4;
    /* margin-right: 120rpx; */
}

.information>view:nth-of-type(2)>view:nth-of-type(2),
.information>view:nth-of-type(2)>view:nth-of-type(3) {
    font-size: 30rpx;
    letter-spacing: 0rpx;
    line-height: 32rpx;
    color: #999999;
}

.information>view:nth-of-type(3) {
    background-color: #59a4b4;
    writing-mode: vertical-lr;
    padding: 40rpx;
    /* margin-right: 65rpx; */
    font-size: 22rpx;
    height: 51%;
    letter-spacing: 5rpx;
    line-height: 20rpx;
    color: #ffffff;
}

.bottomWait {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
    letter-spacing: 0rpx;
    line-height: 30rpx;
    color: #58a4b4;

    margin-bottom: 144rpx;

}