.order {
    overflow: hidden;
}

.classify {
    width: 100%;
    height: 100rpx;
    font-size: 30rpx;
    line-height: 36rpx;
    color: #ffffff;
    background-color: #71b1be;
    display: flex;
    position: fixed;
}

.classify view {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 2rpx solid #97c4ce;
}

.classify view:nth-of-type(2) {
    border-left: 2rpx solid #97c4ce;
    border-right: 2rpx solid #97c4ce;
}

.orderInfo {
    background-color: #ffffff;
    margin-bottom: 20rpx;
}

.orderInfo>view {
    padding: 0rpx 30rpx;
}

.orderInfo>view:nth-of-type(1) {
    height: 85rpx;
    display: flex;
    font-size: 28rpx;
    line-height: 32rpx;
    color: #999999;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx solid #cccccc;
}

.orderInfo>view:nth-of-type(2) {
    display: flex;
    font-size: 30rpx;
    line-height: 40rpx;
    color: #333333;
    flex-wrap: wrap;
    padding: 34rpx auto;
    margin: 30rpx 0rpx;
    align-items: center;
}


.orderInfo>view:nth-of-type(2)>view {
    flex: 1;
}

.orderInfo>view:nth-of-type(2)>view>view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
}

.orderInfo>view:nth-of-type(2)>view>view:nth-of-type(2) {
    color: #999999;
}

.orderInfo>view:nth-of-type(2)>view>view:nth-of-type(3) text:nth-of-type(1) {
    color: #999999;
}

.orderInfo>view:nth-of-type(2)>view {
    padding-left: 30rpx;
}

.orderInfo>view:nth-of-type(3) {
    height: 85rpx;
    border-top: 2rpx solid #cccccc;
}

.orderInfo>view:nth-of-type(3) {
    font-size: 30rpx;
    line-height: 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color:  #cccccc;
}
.orderInfo>view:nth-of-type(3) view{
border-radius: 30rpx;
height: 60rpx;
width: 200rpx;
background-color: #3333;
display: flex;
align-items: center;
justify-content: center;
color: #ffffff;
}
.orderInfo>view:nth-of-type(3) .ordersActive,.classify .ordersActive{
background-color: #58a4b4;
}