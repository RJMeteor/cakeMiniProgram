page {
    background-color: #ffffff;
}

.updatePassword {
    overflow: hidden;
}

.updatePassword .submit {
    width: 100%;
    background-color: #58a4b4;
    font-size: 36rpx;
    line-height: 36rpx;
    color: #ffffff;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    bottom: 0;
}

.updatePassword>view:nth-of-type(2),
.updatePassword>view:nth-of-type(3),
.updatePassword>view:nth-of-type(4) {
    border: 2rpx solid #ccc;
}

.van-cell {
    height: 116rpx;
    align-items: center;
    font-size: 26rpx !important;
    font-weight: 540 !important;
    letter-spacing: 2rpx !important;
    color: #333333 !important;
}
