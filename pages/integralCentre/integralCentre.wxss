.tapType {
    width: 100%;
    padding: 40rpx 0rpx;
    background-color: #fff;
    margin-top: 10rpx;
    margin-bottom: 30rpx;
}

scroll-view {
    white-space: nowrap;
}

.tapType .type {
    font-size: 32rpx;
    line-height: 60rpx;
    text-align: center;
    width: 120rpx;
    height: 60rpx;
    display: inline-block;
    margin-left: 30rpx;
    color: #8bc7d4;
    border-radius: 12rpx;
    border: 2rpx #cde4e8 solid;
}

.tapType .type:last-child {
    margin-right: 30rpx;
}

.shop {
    border-radius: 20rpx;
    overflow: hidden;
    margin-left: 20px;
    margin-top: 30rpx;
    float: left;
    border-radius: 20rpx;
    overflow: hidden;
}
.shop text{
font-size: 30rpx;
line-height: 40rpx;
color: #333333;
}
.shop text:nth-of-type(2){
    font-size: 26rpx;
    color: #999999;
}
.shop>view:nth-of-type(1){
    padding-left: 30rpx;
}
/*  */
.shop view>view {
    height: 60rpx;
    display: flex;
    align-items: center;
}
.shop view>view text:nth-of-type(1){
    font-size: 34rpx;
    color: var(--bar-color);
}
.shop view>view text:nth-of-type(2){
    font-size: 26rpx;
    color: var(--bar-color);
    text-decoration-line:line-through;
    color: #999999;
    margin-left: 20rpx;
}
.shop>view:nth-of-type(1){
    display: flex;
    flex-direction: column;
}
.purchase {
    height: 60rpx;
    font-size: 30rpx;
    letter-spacing: 0rpx;
    line-height: 12rpx;
    color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--bar-color);
}