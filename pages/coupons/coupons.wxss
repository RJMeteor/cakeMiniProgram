page {
    background-color: #ffffff;
}

.coupons {
    overflow: hidden;
}

.classify {
    background-color: #58a4b4;
    display: flex;
}

.classify>view {
    width: 50%;
    height: 90rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    line-height: 12rpx;
    border-top: 1rpx #8fc0cb solid;
}
.classify>view:nth-of-type(1)
{
    border-right: 1rpx #8fc0cb solid;
}
.couponsCard {
    margin-top: 40rpx;
    width: 100%;
    height: 220rpx;
    position: relative;
}

.information {
    width: 100%;
    height: 100%;
    position: absolute;
    top: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.information view {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
}

.information>view:nth-of-type(1) {
    margin-left: 60rpx;
    width: 200rpx;
    color: #58a4b4;
    font-size: 80rpx;
    letter-spacing: -12rpx;
    color: #58a4b4;
}

.information>view:nth-of-type(2) {
    flex-direction: column;
    font-size: 48rpx;
    letter-spacing: 0rpx;
    line-height: 50rpx;
    color: #58a4b4;
}

.information>view:nth-of-type(2)>view:nth-of-type(2),
.information>view:nth-of-type(2)>view:nth-of-type(3) {
    font-size: 30rpx;
    letter-spacing: 0rpx;
    line-height: 32rpx;
    color: #999999;
}

.information>view:nth-of-type(3) {
    background-color: #59a4b4;
    writing-mode: vertical-lr;
    padding: 40rpx;
    font-size: 30rpx;
    height: 51%;
    letter-spacing: 2rpx;
    line-height: 16rpx;
    color: #ffffff;
}